{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/search",
      "destination": "/api/search.js"
    },
    {
      "source": "/api/generate-report",
      "destination": "/api/generate-report.js"
    },
    {
      "source": "/api/ai-analysis",
      "destination": "/api/ai-analysis.js"
    },
    {
      "source": "/api/detail",
      "destination": "/api/detail.js"
    },
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    },
    {
      "source": "/api/bookmarks",
      "destination": "/api/bookmarks.js"
    },
    {
      "source": "/api/documents",
      "destination": "/api/documents.js"
    },
    {
      "source": "/api/dashboard-stats",
      "destination": "/api/dashboard-stats.js"
    },
    {
      "source": "/api/dashboard",
      "destination": "/api/dashboard.js"
    },
    {
      "source": "/api/debug-env",
      "destination": "/api/debug-env.js"
    },
    {
      "source": "/api/users/(.*)",
      "destination": "/api/users.js?resource=$1"
    },
    {
      "source": "/api/admin/(.*)",
      "destination": "/api/admin.js?resource=$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}